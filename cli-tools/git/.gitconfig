[alias]
    d   = diff
    pl  = pull
    ps  = push
    f   = fetch
    m   = merge
    b   = branch
    c   = commit
    rb  = rebase
    rl  = reflog
    r   = remote
    co  = checkout
    fp  = fetch -p
    up  = upstream
    ba  = branch -a
    bd  = branch -d
    bD  = branch -D
    sp  = stash pop
    sh  = stash push
    s   = status -sb
    ap  = add --patch
    cob = checkout -b
    cp  = cherry-pick
    dc  = diff --cached
    plr = pull --rebase
    rbs = rebase --skip
    a   = commit --amend
    pb  = push -u origin
    rbi = rebase -i @{u}
    rbc = rebase --continue
    pom = push origin master
    rlc = reset --hard HEAD^
    ulc = reset --soft HEAD^
    l   = log --pretty=custom
    ac  = "!git add -A && git c"
    pf  = push --force-with-lease
    mn  = merge --no-commit --no-ff
    i   = update-index --assume-unchanged
	su  = submodule update --init --recursive
    dfs = diff --staged --ws-error-highlight=new,old
    g   = log --oneline --graph --decorate --pretty=custom
    df  = diff --color-words=. --ws-error-highlight=new,old
    sb  = "!git sh && git plr upstream master && git sp && git pb \"$1\" #"

[color "branch"]
    local = green
    remote = yellow
    current = green bold

[color "diff"]
    old = red
    new = green
    meta = yellow
    frag = magenta

[color "status"]
    added = green reverse
    untracked = red reverse
    changed = yellow reverse

[core]
    abbrev = 12
    editor = hx
    pager = delta
    excludesfile = ~/.gitignore

[delta]
    light = false
    navigate = true

[diff "bin"]
    textconv = hexdump -v -C

[interactive]
    diffFilter = delta --color-only

[merge]
    conflictstyle = diff3

[pretty]
    custom = "%C(magenta)%h%C(red)%d %C(yellow)%ar %C(green)%s %C(yellow)(%an)"
    #                     │        │            │            │             └─ author name
    #                     │        │            │            └─ message
    #                     │        │            └─ date (relative)
    #                     │        └─ decorations (branch, heads or tags)
    #                     └─ hash (abbreviated)

[push]
    followTags = true

